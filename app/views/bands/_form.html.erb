<% if action == :new_band %>
  <% send_url = bands_url%>
  <% submit_button = "Create Band"%>
<%else%>
  <% send_url = band_url%>
  <% submit_button = "Update Band" %>
<% end%>


<form action='<%= send_url %>' method= "POST">
  <%= auth_token_html %>

  <% if action == :update_band%>
    <input type="hidden" value="PATCH" name="_method" >
  <%end%>

  <label for="band_name">Name</label>
  <input type="text" name="band[name]" id="band_name" value="<%=@band.name%>">
  <br>

  <input type="submit" value = '<%=submit_button%>' >
</form>